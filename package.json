{
  "name": "next-intl-hlpr",
  "displayName": "next-intl-hlpr",
  "publisher": "felipestanzani",
  "description": "Highlights missing translations in next-intl JSON files and shows missing languages on hover",
  "version": "0.0.4",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/felipestanzani/next-intl-hlpr.git"
  },
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "next-intl",
    "i18n",
    "translations",
    "json",
    "typescript"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Next Intl Helper",
      "properties": {
        "nextIntlHlpr.detectConfig": {
          "type": "boolean",
          "default": true,
          "description": "Whether to automatically detect next-intl configuration from next.config.js/ts and i18n/request.ts"
        },
        "nextIntlHlpr.configPath": {
          "type": "string",
          "description": "Path to next-intl configuration files (if not auto-detected). Should point to the directory containing next.config.js/ts and i18n/request.ts"
        },
        "nextIntlHlpr.requestPath": {
          "type": "string",
          "description": "Path to the request.ts file (if not in i18n/request.ts). This is where next-intl message loading is configured."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^22.15.18",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.26.0",
    "prettier": "3.5.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@formatjs/fast-memoize": "^2.2.7",
    "@schummar/icu-type-parser": "1.22.2",
    "eslint-config-molindo": "^8.0.0",
    "intl-messageformat": "^10.7.16"
  },
  "prettier": "eslint-config-molindo/.prettierrc.json"
}